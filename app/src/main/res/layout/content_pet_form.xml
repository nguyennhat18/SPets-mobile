<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="400px"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background" />

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="400px"
                    android:layout_height="400px"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/icon_gallery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgAvatar">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputName"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtName"
                            style="@style/modifiedEditText"
                            android:hint="Tên thú cưng..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputColor"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtColor"
                            style="@style/modifiedEditText"
                            android:hint="Màu sắc..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputSpecies"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtSpecies"
                            style="@style/modifiedEditText"
                            android:hint="Giống loài..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputBirthDate"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtBirthDate"
                            style="@style/modifiedEditText"
                            android:hint="Ngày sinh..."
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputHeight"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtHeight"
                            style="@style/modifiedEditText"
                            android:hint="Chiều cao..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputWeight"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtWeight"
                            style="@style/modifiedEditText"
                            android:hint="Cân nặng..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputHealth"
                        style="@style/parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp">

                        <EditText
                            android:id="@+id/edtHealth"
                            style="@style/modifiedEditText"
                            android:hint="Sức khoẻ..."
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:text=""/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        style="@android:style/Widget.Button"
                        android:background="@drawable/btn_background_2"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:text="Lưu Dữ Liệu"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>